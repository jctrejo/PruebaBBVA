<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    tools:context=".ui.detail.DetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:background="@color/white_bg"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="@dimen/margin_padding_8"
        android:paddingBottom="@dimen/margin_padding_24"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/title"
        android:textColor="@color/black_title"
        android:textSize="@dimen/size_font_24"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/width_30"
        android:layout_height="@dimen/height_30"
        android:layout_marginStart="@dimen/margin_padding_20"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/ic_arrow_back" />

    <ImageView
        android:id="@+id/post_image_view"
        android:layout_width="@dimen/width_0"
        android:layout_height="@dimen/height_220"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/title_pokemon"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_20"
        android:layout_marginTop="@dimen/margin_padding_20"
        android:layout_marginEnd="@dimen/margin_padding_20"
        android:fontFamily="sans-serif-black"
        android:text="Titulo"
        android:textColor="@color/black_title"
        android:textSize="@dimen/size_font_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_image_view" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_20"
        android:text="@string/detail_dummy"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/title_pokemon"
        app:layout_constraintStart_toStartOf="@+id/title_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/title_pokemon" />
</androidx.constraintlayout.widget.ConstraintLayout>